<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/parent_layout">

    <LinearLayout
        android:id="@+id/priority_layout"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/priority_layout"
        android:layout_toRightOf="@+id/priority_layout"
       android:background="@drawable/ic_assignment_black_24dp" />


    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:layout_toEndOf="@+id/icon_imageView"
        android:layout_toRightOf="@+id/icon_imageView"
        android:layout_toLeftOf="@+id/number_of_days_textView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"

        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number_of_days_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/request_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_alignStart="@+id/title_textView"
        android:layout_alignLeft="@+id/title_textView"
        android:layout_below="@id/title_textView" />

    <TextView
        android:id="@+id/assignedDate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"

        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/employee_textView"
        android:background="@drawable/ic_restore_black_24dp" />


    <TextView
        android:id="@+id/employee_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@id/request_number_textView"
        android:layout_alignStart="@+id/title_textView"
        android:layout_alignLeft="@+id/title_textView" />




</RelativeLayout>